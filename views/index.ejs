<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= 控制页面 %>
    </title>
    <!--Vue-->
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <!--Flat UI-->
    <link href="/stylesheets/flat-ui.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading "><a href="#">Wifi 信息</a></div>
            <div class="panel-body">
                <ul class="list-group">
                    <% networks.forEach(function(networks){%>
                        <li class="list-group-item">
                            <%=networks.ssid %>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading "><a href="#">Wifi 设置</a></div>
            <div class="panel-body">
                <form action="changeWifi" class="form-horizontal" method="post" role="form">
                    <div class="form-group">
                        <label for="ssidWifi" class="col-lg-2 control-label">新wifi SSID：</label>
                        <div class="col-lg-10">
                            <input type="text" name="wifi_ssid" class="form-control" id="ssidWifi" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-signal"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pwdWifi" class="col-lg-2 control-label">新wifi password：</label>
                        <div class="col-lg-10">
                            <input type="password" name="wifi_password" class="form-control" id="pwdWifi" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="submitWifi" class="col-lg-10 control-label sr-only"></label>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-primary btn-block" id="submitWifi">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading "><a href="#">采样率 设置</a></div>
            <div class="panel-body">
                <form action="sample" method="post" role="form" class="form-horizontal">
                    <div class="form-group">
                        <label for="pick" class="col-lg-2 control-label">采样率：</label>
                        <div class="col-lg-10">
                            <input type="text" name="sampletime" class="form-control" id="pick" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="submitPick" class="col-lg-10 control-label sr-only"></label>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-primary btn-block" id="submitPick">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/javascripts/jquery.js "></script>
    <script src="/javascripts/flat-ui.js "></script>
    <script src="/javascripts/application.js"></script>
</body>

<body>
<form action = "sample" method="post">
    采样率：<input type="text" name="sampletime"/><br />
    <input type="submit" value="提交"/>
</form>
</body>

<body>
<form action = "userLogin" method="post">
    用户名：<input type="text" name="username"/><br />
    密码：<input type="text" name="password"/><br />
    <input type="submit" value="提交"/>
</form>
</body>

</html>
